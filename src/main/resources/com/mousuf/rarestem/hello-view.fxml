<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rsLogo" prefHeight="700.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mousuf.rarestem.HelloController">
   <children>
   
             <Label fx:id="welcomeText" layoutX="539.0" layoutY="461.0" prefHeight="17.0" prefWidth="205.0" />
       <Button layoutX="108.0" layoutY="466.0" onAction="#onHelloButtonClick" text="Hello!" />
      <PasswordField alignment="CENTER" layoutX="566.0" layoutY="314.0" promptText="Password" />
      <TextField alignment="CENTER" layoutX="566.0" layoutY="286.0" promptText="Email" />
      <Button fx:id="logInBtn" layoutX="737.0" layoutY="299.0" mnemonicParsing="false" onAction="#onHelloButtonClick" text="Log In" />
      <ImageView fitHeight="239.0" fitWidth="239.0" layoutX="521.0" layoutY="6.0" onMouseClicked="#onHelloButtonClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/rs-prototype-logo-full.png" />
         </image></ImageView>
      <Button fx:id="registerBtn" layoutX="550.0" layoutY="368.0" mnemonicParsing="false" text="Register" />
      <Label fx:id="logInFailMsg" layoutX="570.0" layoutY="261.0" prefHeight="17.0" prefWidth="149.0" text="Incorrect Email/Password" textAlignment="CENTER" textFill="#f20404">
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </Label>
      <Button fx:id="forgotPasswordBtn" layoutX="632.0" layoutY="368.0" mnemonicParsing="false" text="Forgot password" />
   </children>
</AnchorPane>
